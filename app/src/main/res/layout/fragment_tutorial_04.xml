<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            style="@style/view_tutorial_step_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_20dp">

            <com.maxwell.bodysensor.ui.ViewTextView
                style="@style/view_tutorial_title_text"
                android:text="Syncing"/>

            <LinearLayout
                style="@style/view_tutorial_step_item">

                <ImageView
                    style="@style/view_tutorial_step_img"
                    android:src="@drawable/bullet_1"/>
                <com.maxwell.bodysensor.ui.ViewTextView
                    style="@style/view_tutorial_step_text"
                    android:text="Tap the sync button when connected to the YUFIT band to sync recent data."/>

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/space_30dp"
                android:paddingLeft="@dimen/space_50dp"
                android:scaleType="centerInside"
                android:src="@drawable/img_tut_sync"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>