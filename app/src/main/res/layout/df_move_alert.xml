<?xml version="1.0" encoding="utf-8"?>
<com.maxwell.bodysensor.ui.ViewLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mxw="http://schemas.android.com/apk/res-auto"
    style="@style/app_outtab_layout_all"
    android:baselineAligned="false">

    <include layout="@layout/mxw_df_title_bar" />
    
    <LinearLayout
        style="@style/app_outtab_content"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:background="@color/app_blue_setting_bg">

            <ToggleButton
                android:id="@+id/toggle_move_alert"
                style="@style/toggle_button_center" />

        </LinearLayout>

        <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center"
	        android:background="@color/app_blue_setting_bg" >
	
			<com.maxwell.bodysensor.ui.ViewTextView
			    android:id="@+id/txt_move_alert"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_centerHorizontal="true"
			    android:text="@string/df_move_alert_start_time_to_end_time"
	            android:textSize="@dimen/text_18sp"
	        	android:textStyle="bold"
                mxw:typeface="Avenir-Roman.ttf"/>

			<RelativeLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
	            android:layout_below="@+id/txt_move_alert"
	            android:layout_centerHorizontal="true"
	            android:layout_marginTop="@dimen/space_10dp" >
		
				<com.maxwell.bodysensor.ui.ViewButton
				    style="@style/btn_time_bg_color"
				    android:id="@+id/btn_move_alert_time_start"
				    android:layout_toLeftOf="@+id/txt_hyphen"
				    android:layout_centerVertical="true"
				    tools:text="Start Time" />
		
				<TextView
				    android:id="@+id/txt_hyphen"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/space_20dp"
                    android:layout_marginLeft="@dimen/space_20dp"
				    android:text="-" />
		
				<com.maxwell.bodysensor.ui.ViewButton
				    style="@style/btn_time_bg_color"
				    android:id="@+id/btn_move_alert_time_end"
				    android:layout_toRightOf="@id/txt_hyphen"
				    android:layout_centerVertical="true"
				    tools:text="End Time" />
		
			</RelativeLayout>
	        
	    </RelativeLayout>

	    <com.maxwell.bodysensor.ui.ViewTextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="@dimen/space_30dp"
	        android:text="@string/df_move_alert_instruction"
	        android:textSize="@dimen/text_15sp"
            mxw:typeface="Avenir-Roman.ttf" />
        
    </LinearLayout>

</com.maxwell.bodysensor.ui.ViewLinearLayout>
