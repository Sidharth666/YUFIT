<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mxw="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/space_12dp">

    <com.maxwell.bodysensor.ui.ViewTextView
        android:id="@+id/text_activity_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/space_20dp"
        android:textColor="@color/app_white"
        android:text="steps"
        mxw:typeface="Avenir-Roman.ttf"/>
    <com.maxwell.bodysensor.ui.ViewTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_activity_info"
        android:textSize="@dimen/space_60dp"
        android:textColor="@color/app_white"
        android:text="15304"
        mxw:typeface="Chalet-ParisNineteenSeventy.ttf"/>

    <com.maxwell.bodysensor.ui.ViewTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/space_36dp"
        android:textColor="@color/app_white"
        android:text="@string/app_name_lowercase"
        mxw:typeface="Chalet-ParisNineteenSeventy.ttf"/>

</RelativeLayout>