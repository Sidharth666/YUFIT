<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mxw="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:padding="@dimen/space_15dp"
    android:paddingBottom="@dimen/space_15dp"
    android:background="@drawable/confitem_bg"
    android:weightSum="13">

    <ImageView
        android:id="@+id/imgb_delete"
        android:layout_width="@dimen/space_46dp"
        android:layout_height="@dimen/space_46dp"
        android:padding="@dimen/space_12dp"
        android:src="@drawable/delete"
        android:background="@null"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="12"
        android:orientation="vertical" >

        <com.maxwell.bodysensor.ui.ViewTextView
            android:id="@+id/text_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16sp"
            tools:text="Device Name"
            />
        <com.maxwell.bodysensor.ui.ViewTextView
            android:id="@+id/text_device_mac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_14sp"
            tools:text="AA:AA:AA:AA:AA:AA"
            />

    </LinearLayout>

    <ImageView
        style="@style/app_conf_item_next_image"
        android:contentDescription="@string/acd" />

</LinearLayout>