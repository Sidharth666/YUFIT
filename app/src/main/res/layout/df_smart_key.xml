<?xml version="1.0" encoding="utf-8"?>
<com.maxwell.bodysensor.ui.ViewLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/smart_key_layout"
    style="@style/app_outtab_layout_all"
    android:baselineAligned="false">

    <include layout="@layout/mxw_df_title_bar" />
    
    <ScrollView
        style="@style/app_outtab_content"
        android:clickable="true" >
        
        <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
            android:orientation="vertical" >
	
	        <RadioGroup
	            android:id="@+id/radio_smart_key_function"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:padding="@dimen/space_20dp"
                android:background="@color/app_blue_setting_bg">
	            
	            <com.maxwell.bodysensor.ui.ViewRadioButton
                    style="@style/radio_button_smart_key_option"
	                android:id="@+id/rbt_camera_remote"
	                android:drawableLeft="@drawable/smartkey_camera"
                    android:text="@string/df_smart_keys_camera_remote"/>
	           
	            <com.maxwell.bodysensor.ui.ViewRadioButton
                    style="@style/radio_button_smart_key_option"
	                android:id="@+id/rbt_video_remote"
	                android:drawableLeft="@drawable/smartkey_video"
	                android:layout_marginTop="@dimen/space_15dp"
                    android:text="@string/df_smart_keys_video_remote"/>
	           
	            <com.maxwell.bodysensor.ui.ViewRadioButton
                    style="@style/radio_button_smart_key_option"
	                android:id="@+id/rbt_find_phone"
	                android:drawableLeft="@drawable/smartkey_findphone"
	                android:layout_marginTop="@dimen/space_15dp"
                    android:text="@string/df_smart_keys_find_device"/>
	           
	            <com.maxwell.bodysensor.ui.ViewRadioButton
                    style="@style/radio_button_smart_key_option"
	                android:id="@+id/rbt_none"
	                android:drawableLeft="@drawable/smartkey_none"
	                android:layout_marginTop="@dimen/space_15dp"
                    android:text="@string/df_smart_keys_none"/>
	
	        </RadioGroup>

            <com.maxwell.bodysensor.ui.ViewTextView
                style="@style/text_smart_key_hint"
                android:id="@+id/text_hint_smart_key"
                tools:text="5566"/>
	
	    </LinearLayout>
	    
        
    </ScrollView>

</com.maxwell.bodysensor.ui.ViewLinearLayout>
