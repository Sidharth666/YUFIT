<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            style="@style/view_tutorial_step_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_20dp">

            <com.maxwell.bodysensor.ui.ViewTextView
                style="@style/view_tutorial_title_text"
                android:text="@string/title_pairing_new_device"/>

            <LinearLayout
                style="@style/view_tutorial_step_item">

                <ImageView
                    style="@style/view_tutorial_step_img"
                    android:src="@drawable/launch_orange_1"/>
                <com.maxwell.bodysensor.ui.ViewTextView
                    style="@style/view_tutorial_step_text"
                    android:text="@string/tutorial1_step_1"/>

            </LinearLayout>

            <LinearLayout
                style="@style/view_tutorial_step_item">

                <ImageView
                    style="@style/view_tutorial_step_img"
                    android:src="@drawable/launch_orange_2"/>
                <com.maxwell.bodysensor.ui.ViewTextView
                    style="@style/view_tutorial_step_text"
                    android:text="@string/tutorial1_step_2"/>

            </LinearLayout>

            <LinearLayout
                style="@style/view_tutorial_step_item">

                <ImageView
                    style="@style/view_tutorial_step_img"
                    android:src="@drawable/launch_orange_3"/>
                <com.maxwell.bodysensor.ui.ViewTextView
                    style="@style/view_tutorial_step_text"
                    android:text="@string/tutorial1_step_3"/>

            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/space_50dp"
                android:scaleType="centerInside"
                android:src="@drawable/tutorial_01_a"/>

            <LinearLayout
                style="@style/view_tutorial_step_item">

                <ImageView
                    style="@style/view_tutorial_step_img"
                    android:src="@drawable/launch_orange_4"/>
                <com.maxwell.bodysensor.ui.ViewTextView
                    style="@style/view_tutorial_step_text"
                    android:text="@string/tutorial1_step_4"/>

            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/space_50dp"
                android:scaleType="centerInside"
                android:src="@drawable/tutorial_01_b"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>