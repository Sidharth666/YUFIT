<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Bottom View Start-->
    <LinearLayout
        android:id="@+id/bottom_delete"
        android:layout_width="@dimen/space_86dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/app_orange"
        android:weightSum="1">

        <com.maxwell.bodysensor.ui.ViewTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_white"
            android:text="@string/strDelete"/>

    </LinearLayout>
    <!-- Bottom View End-->

    <!-- Surface View End -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/space_8dp"
        android:paddingBottom="@dimen/space_8dp"
        android:weightSum="10">

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/space_1dp"
            android:layout_weight="0.5" />
        <com.maxwell.bodysensor.ui.CircleImageView
            android:id="@+id/img_member_photo"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_46dp"
            android:layout_weight="1.5"
            android:src="@drawable/profile_photo_small"/>
        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/space_1dp"
            android:layout_weight="0.5" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <com.maxwell.bodysensor.ui.ViewTextView
                android:id="@+id/text_member_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/space_12dp"
                tools:text="55667788"/>
            <com.maxwell.bodysensor.ui.ViewTextView
                android:id="@+id/text_member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/space_12dp"
                tools:text="Super Man"/>

        </LinearLayout>

    </LinearLayout>
    <!-- Surface View End -->
</com.daimajia.swipe.SwipeLayout>