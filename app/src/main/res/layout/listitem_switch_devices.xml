<?xml version="1.0" encoding="utf-8"?>
<com.maxwell.bodysensor.ui.CheckedRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mxw="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="@dimen/space_5dp" >

    <com.maxwell.bodysensor.ui.InertCheckBox
        android:id="@+id/rb_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:button="@drawable/checkbox_selector"/>
    <com.maxwell.bodysensor.ui.ViewTextView
        style="@style/app_dlg_device_name_text"
        android:id="@+id/text_name"
        android:layout_toRightOf="@id/rb_btn"
        android:layout_alignParentRight="true"
        android:paddingLeft="@dimen/space_8dp"
        tools:text="Device Name"
        mxw:typeface="Avenir-Medium.ttf"/>


</com.maxwell.bodysensor.ui.CheckedRelativeLayout>
