<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <gradient 
                android:startColor="@color/app_brown_ochre"
                android:centerColor="@color/app_brown_ochre"
                android:endColor="@color/app_brown_ochre"
                android:type="linear"
            />
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">
            <gradient 
                android:startColor="@color/app_theme_color_2"
                android:centerColor="@color/app_theme_color_2"
                android:endColor="@color/app_theme_color_2"
                android:type="linear"
            />
        </shape>
    </item>
</selector>
