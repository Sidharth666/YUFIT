<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="wrapper_settings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="wrapper_settings_padding" parent="wrapper_settings">
        <item name="android:padding">@dimen/content_gutter</item>
    </style>

    <style name="wrapper_settings_no_click" parent="wrapper_settings">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="settings_main_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="settings_sub_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/content_gutter</item>
    </style>

    <style name="settings_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/content_gutter</item>
    </style>

    <style name="indented_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
    </style>

    <style name="tg_btn" parent="@android:style/Widget.Holo.Light.Button.Borderless.Small">
        <item name="android:textColor">@color/day_toggle_color</item>
        <item name="android:background">@drawable/sel_day_toggle_btn</item>
        <item name="android:layout_width">@dimen/choose_day_dimen</item>
        <item name="android:layout_height">@dimen/choose_day_dimen</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="material_trans_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:background">@drawable/sel_btn</item>
    </style>

    <style name="material_trans_btn_inverse">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/space_36dp</item>
        <item name="android:textSize">@dimen/text_13sp</item>
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:background">@drawable/sel_btn</item>
    </style>

    <style name="notification_header">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/text_notif_header</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="settings_content">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/text_settings_content</item>
    </style>


    <style name="my_outtab_layout_all">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/app_white</item>
    </style>

    <style name="my_outtab_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="my_app_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar.Translucent" parent="android:Theme.Translucent.NoTitleBar.Fullscreen">
    </style>

    <style name="HmSquareImageButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">@dimen/ib_padding</item>
        <item name="android:layout_width">@dimen/button_height</item>
        <item name="android:layout_height">@dimen/button_height</item>
    </style>

    <style name="FullWidthButton">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/content_gutter</item>
        <item name="android:drawablePadding">@dimen/content_gutter</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/app_grey80</item>
    </style>



</resources>