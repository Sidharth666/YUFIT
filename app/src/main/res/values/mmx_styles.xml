<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="wrapper_settings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/sel_btn_material</item>
    </style>

    <style name="wrapper_settings_padding" parent="wrapper_settings">

    </style>

    <style name="wrapper_settings_no_click" parent="wrapper_settings">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="settings_main_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="settings_sub_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/content_gutter</item>
    </style>

    <style name="settings_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/content_gutter</item>
    </style>

    <style name="indented_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/content_gutter</item>
        <item name="android:paddingLeft">40dp</item>
    </style>

    <style name="tg_btn" parent="@android:style/Widget.Holo.Light.Button.Borderless.Small">
        <item name="android:textColor">@color/day_toggle_color</item>
        <item name="android:background">@drawable/sel_day_toggle_btn</item>
        <item name="android:layout_width">@dimen/choose_day_dimen</item>
        <item name="android:layout_height">@dimen/choose_day_dimen</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="material_trans_btn">
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:background">@drawable/sel_btn_material</item>
    </style>

    <style name="notification_header">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/text_notif_header</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="settings_content">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/text_settings_content</item>
    </style>

</resources>